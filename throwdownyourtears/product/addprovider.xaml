<Page x:Class="throwdownyourtears.product.addprovider"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:throwdownyourtears.product"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addprovider">

    <StackPanel>
        <TextBlock Background="LightGreen" Text="Поставщик" Width="319"/>
        <TextBox Background="LightSkyBlue" Text="{Binding Edit.Name}" Width="319"/>
        <TextBlock Background="LightGreen" Text="@telegramid" Width="319"/>
        <TextBox Background="LightSkyBlue" Text="{Binding Edit.Telegramid}" Width="319"/>
        <Button FontFamily="Segoe UI Black" FontWeight="UltraBlack" FontStyle="Normal" FontSize="16"  FlowDirection="LeftToRight" Background="LightPink" Content="Сохранить" Click ="Save" Width="146"/>
    </StackPanel>
</Page>
